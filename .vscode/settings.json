{
  "editor.formatOnSave": true,
  "prettier.eslintIntegration": true,
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "prettier.eslintIntegration": true,
      "singleQuote": true,
      "trailingComma": "all"
    },
    "js-beautify-html": {
      "wrap_attributes": "force-expand-multiline"
    },
    "prettyhtml": {
      "printWidth": 90,
      "singleQuote": false,
      "wrapAttributes": false,
      "sortAttributes": false
    }
  }
}
